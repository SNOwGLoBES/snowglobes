@article{1475-7516-2003-10-009,
  author={I Gil-Botella and A Rubbia},
  title={Oscillation effects on supernova neutrino rates and spectra and detection of the shock breakout in a liquid argon TPC},
  journal={Journal of Cosmology and Astroparticle Physics},
  volume={2003},
